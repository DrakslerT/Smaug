<main>
    <!---- Main Section ---->

    <!----- Welcome section ----->
    {{> welcome}}

    <!----- Cards section ----->
    <div class="container" id="cards-section">
        <div class="row">
            {{> card}}
        </div>
    </div>

    <div class="container" id="cards-section">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <h2>Alert section</h2>
            </div>
        </div>
        {{> alert}}
    </div>

    <!----- Overview section ----->
    <div class="container" id="overview-section">
        <h2 style="text-align: left; padding-bottom: 10px;">Last month overview</h2>
        <div class="row">
            <div class="col-xl-6 col-lg-6 left-col">

                <!----- Expense section----->
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" style="border-bottom:1px solid rgb(204, 204, 204); padding-bottom: 20px">
                        <table class="table table-borderless table-hover tabela-balance">
                            <tbody>
                                <tr id="income-tr">
                                    <th>Income</th>
                                    <td>{{income}}€</td>
                                    <td style="padding: 0px; text-align: right;"><button type="button" class="btn p" data-toggle="modal" href="#changeIncome"><i class="fas fa-pencil-alt"></i></button></td>
                                </tr>
                                <tr id="expenses-tr">
                                    <th>Expenses</th>
                                    <td>{{expenses}}€</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th id="border-th">Balance</th>
                                    <td id="border-td">{{balance}}€</td>
                                    <td id="border-td"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!----- Analytics section ----->
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <h4 style="text-align: center; padding-top: 35px; padding-bottom: 10px;">Analytics</h4>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 analytics-col" style="padding-bottom: 20px;">
                        <table class="table table-borderless table-hover tabela">
                            <tbody class="analytics-table">
                                {{#each analytics}}
                                    <tr>
                                        <th>{{rowName}}</th>
                                        <td style="background-color:{{color}}; text-align:center;">{{category}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!----- Graph ----->
            <div class="col-xl-6 col-lg-6" style="padding-top: 25px;">
                <canvas id="doughnut-canvas"></canvas>
            </div>
        </div>
    </div>


    <!----- Chane income modal ----->
    <div class="modal fade" id="changeIncome" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update your Income</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="number" id="Category" class="form-control" placeholder="Enter your income"></br>
                    <input type="number" id="Category" class="form-control" placeholder="Day in month you receive paycheck" min="1" max="31">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</main>