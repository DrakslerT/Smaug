                        </select>
                    </div>

                    <div class="ena"><label for="inputAmount">Amount</label></br>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">€</span>
                            </div>
                            <input type="number" class="form-control" onfocusout="amount2(this)" id="Amount2" value="0.00" step="any">
                        </div>
                        <div id="amm2"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit"  onclick="disableButton()" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
