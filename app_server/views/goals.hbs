    <div class="modal-content">
      <div class="modal-header">

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form name="signup" method="post" action="/goals" onsubmit="return disableButton()">
      <input type="hidden" name="formType" value="addGoal">
        <div class="modal-body">
          <label for="inputGoal">What's your goal?</label>
          <input type="text" class="form-control" id="Goal" name="goal" onfocusout="nameAdd(this)" placeholder="e.g. new car" required="required">
          <div id="txt1"></div>
          <label for="inputCategory">Choose a Category</label>
          <select id="inputCategory" name="inputCategory" onfocusout="categoryCheckAddGoal(this)" class="form-control" required="required">
            <option selected disabled>Select Category</option>
            {{#each categories}}
            <option id="category{{id}}">{{category}}</option>
            {{/each}}
          </select>

          </br>

          <label for="inputAmount">How much do you want to save?</label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">€</span>
            </div>
            <input type="number" class="form-control" onkeydown="return event.keyCode !== 69 && event.keyCode !== 188" onfocusout="amount5(this)" id="Amount" name="amount" placeholder="e.g. 1500" step="any" required="required">
            <div id="amm"></div>
          </div>

          <label for="inputDate">Planned Date</label>
          <input class="form-control" type="date" placeholder="2020-01-01" id="inputDateAddGoal" name="inputDateAddGoal" onfocusout="dateCheckAddGoal(this);" required="required">


        </div>
        <div class="modal-footer">
          <button type="submit" onclick="disableButton()" class="btn btn-primary">Add Goal</button>
        </div>
      </form>
    </div>
  </div>
</div>

