<!---- Add Goal Form ---->

<div class="modal fade" id="addGoalForm" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="inputGoal">What's your goal?</label>
        <input type="text" class="form-control" id="inputGoal" onfocusout="nameAdd(this)" placeholder="e.g. new car">
        <div id="txt1"></div>
        <label for="inputCategory">Choose a Category</label>
        <select id="inputCategory" class="form-control">
          <option selected disabled>Select Category</option>
          {{#each categories}}
          <option id="category{{id}}">{{category}}</option>
          {{/each}}
        </select>

        </br>

        <label for="inputAmount">How much do you want to save?</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">€</span>
          </div>
          <input type="number" class="form-control" onfocusout="amount(this)" id="inputAmount" placeholder="e.g. 1500">
          <div id="amm"></div>
        </div>

        <label for="inputDate">Planned Date</label>
        <input class="form-control" type="date" value="2020-01-01" id="inputDate">


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Add Goal</button>
      </div>
    </div>
  </div>
</div>


<!--- Modal Form Edit --->

{{#each goal}}
<div class="modal fade" id="editForm{{id}}" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="inputGoal">What's your goal?</label>
        <input type="text" class="form-control" onfocusout="nameAdd2(this,{{id}})" id="inputGoal" value="{{title}}">
        <div id="{{id}}txt"></div>

        <label for="inputCategory">Choose a Category</label>
        <select id="inputCategory" class="form-control">
          {{#each ../categories}}
          <option id="category{{id}}">{{category}}</option>
          {{/each}}
        </select>

        </br>

        <label for="inputAmount">How much do you want to save?</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">€</span>
          </div>
          <input type="number" class="form-control" onfocusout="amount3(this,{{id}})" id="inputAmount" value="{{target}}">
          <div id="{{id}}amm"></div>
        </div>
        <label for="inputDate">Planned Date</label>
        <input class="form-control" type="date" value="{{year}}-{{month}}-{{day}}" id="inputDate">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger">Delete Goal</button>
        <button type="button" class="btn btn-primary">Save Changes</button>
      </div>
    </div>
  </div>
</div>

<!--- Modal Form Add Money --->
<div class="modal fade" id="addMoneyForm{{id}}" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <label for="inputAmount">How much money do you want to add?</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span id="currency{{id}}" class="input-group-text currencyDisplay">€</span>
          </div>
          <input type="number" class="form-control" onfocusout="amount2(this,{{id}})" id="inputAmount" value="0.00">
          <div id="amm{{id}}"></div>
        </div>
        <label for="inputAmount">Your Currency</label>
        <select id="currencySelect{{id}}" class="form-control currencySelector">
          <option selected="selected">€</option>
          <option>$</option>
          <option>£</option>
          <option>¥</option>
          <option>₹</option>
          <option>₽</option>
          <option>kn</option>
        </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Add</button>
      </div>
    </div>
  </div>
</div>
{{/each}}


