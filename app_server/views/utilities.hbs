    {{#each Friend}}
      <div class="modal fade" id="showGroup{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="position-absolute w-100 p-4 d-flex flex-column align-items-end">
          <div class="w-25 toastek">
              <div class="toast ml-auto tt1" role="alert" data-delay="1000" data-autohide="false">
                  <div class="toast-header">
                      <strong class="mr-auto text-primary">HINT</strong>
                      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                          <span aria-hidden="true">×</span>
                      </button>
                  </div>
                  <div class="toast-body">
                      Input may only contain decimal numbers separated by . with max 2 decimal places.
                  </div>
              </div> 
          </div>
        </div>
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Group Details</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form name="signup" method="post" action="/" onsubmit="return disableButton({{id}})">
              <div class="modal-body">
                <div class="row">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Paid</th>
                        <th scope="col">Balance</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each groupMember}}
                        <tr>
                          <td>{{name}}</td>
                          <td><input type="number" onkeydown="return event.keyCode !== 69 && event.keyCode !== 188" id="price{{id}}" class="form-control" onfocusout="check(this,{{id}})" placeholder="Bill amount" step="any" required="required"></td>
                          <td><input type="number" onkeydown="return event.keyCode !== 69 && event.keyCode !== 188" id="paid{{id}}" class="form-control" onfocusout="check(this,{{id}})" placeholder="Money paid"step="any" required="required"></td>
                          <td>{{amount}}</td>
                        </tr>
                        <div id="amm"></div>
                        <div id="bmm"></div>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" onclick="disableButton({{id}})"class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    {{/each}}

