                  <input type="text" class="form-control" placeholder="Group Name" name="inputGroupName"></br>
                  <label for="inputGroupName">Add Members</label>
                  <input type="text" class="form-control" placeholder="Member 1" name="inputMember1" id="inputMember1" style="margin-top:1%">
                  <input type="text" class="form-control" placeholder="Member 2" name="inputMember2" id="inputMember2" style="margin-top:4%">
                  
                 
                </div>
                <div class="modal-footer">
                    <button type="submit" onclick="disableButton2()" class="btn btn-primary">Add Group</button>
                     <button type="button" id="addGroupMember" class="btn btn-primary" onclick="addNewInput();"> 
                        <i class="fas fa-plus-square"></i>
                    </button>
                </div>
            </form>
        </div>
