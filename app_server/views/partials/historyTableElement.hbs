{{#each expenses}}
    <tr>
    <td class="date align-middle" id="date{{id}}">
        <div class="text-muted" id="year{{id}}">{{year}}</div>
        <div class="text-muted font-weight-bold" id="month{{id}}">{{monthName}}</div>
        <div class="text-muted font-weight-bold" id="day{{id}}">{{day}}</div>
    </td>
    <td class="align-middle" id="category{{id}}">{{category}}</td>
    <td class="align-middle" id="receiver{{id}}">{{recipient}}</td>
    <td class="cena align-middle" id="value{{id}}">
        <span id="currency{{id}}">{{currency}}</span><span id="price{{id}}">{{value}}</span>
    </td>
    <td class="zadnji align-middle">
        <button type="button" class="btn p" data-toggle="modal" href="#editForm{{id}}"><i class="fas fa-pencil-alt"></i></button>
    </td>

    <div class="modal fade" id="editForm{{id}}" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
        <div class="position-absolute w-100 p-4 d-flex flex-column align-items-end">
            <div class="w-25">
                <div class="toast ml-auto tt1" role="alert" data-delay="3000" data-autohide="false">
                    <div class="toast-header">
                        <strong class="mr-auto text-primary">HINT</strong>
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="toast-body">
                        Input may only contain letters, numbers and some special characters (_@./#&+-). Length allowed: 1-20
                    </div>
                </div>
                <div class="toast ml-auto tt2" role="alert" data-delay="1000" data-autohide="false">
                    <div class="toast-header">
                        <strong class="mr-auto text-primary">HINT</strong>
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="toast-body">
                        Input may only contain decimal numbers separated by . or , with max 2 decimal places.
                    </div>
                </div> 
            </div>
        </div>
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form name="signup" method="post" action="/" onsubmit="return disableButton2()">
                    <div class="modal-body">
                        <div class="ena"><label for="inputGoal">Category</label></br>
                            <select id="inputCategory" class="form-control">
                                <option selected>{{category}}</option>
                                {{#each ../categories}}
                                    {{#ifNotEquals ../category category}}
                                        <option id="category{{id}}">{{category}}</option>
                                    {{/ifNotEquals}}
                                {{/each}}
                            </select>
                        </div>
                        <div class="ena">
                            <label for="Payee">Recipient</label><br>
                            <input type="text" id="Payee2" class="form-control" placeholder="e.g. Elektro Ljubljana d.d." onfocusout="nameAdd2(this,{{id}})" value="{{recipient}}"required="required">
                            <div id="{{id}}txt"></div>
                        </div>
                        <div class="ena">
                            <label for="Amount">Amount</label><br>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">€</span>
                                    </div>
                            <input type="number" id="Amount2" class="form-control"  onkeydown="return event.keyCode !== 69 && event.keyCode !== 188" onfocusout="amount3(this,{{id}})" placeholder="e.g. $150.30" value="{{value}}" step="any"required="required">
                            <div id="{{id}}amm"></div>
                            </div>
                        </div>
                        <div class="ena">
                            <label for="datum">Date</label><br>
                            <input type="date" id="inputDate" class="form-control" value="{{year}}-{{month}}-{{day}}"required="required">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger">Delete expense</button>
                        <button type="submit" onclick="disableButton2()" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</tr>
{{/each}}